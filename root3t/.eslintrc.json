{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "quotes": [2, "double"],
        "semi": [2, "always"],
        "no-var": 2,
        "indent": [2, 2],
        "space-in-parens": [2, "never"],
        "no-unused-vars": 2,
        "no-extra-parens": 1,
        "no-multi-spaces": 2,
        "no-unneeded-ternary": 2,
        "no-trailing-spaces": 2,
        "no-console": 0,
        "comma-dangle": [2, "never"],
        "comma-spacing": 0,
        "computed-property-spacing": 2,
        "key-spacing": 2,
        "keyword-spacing": 2
    }
}